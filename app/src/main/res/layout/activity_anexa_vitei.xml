<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFundal"
    tools:context=".documente.anexaVitei.AnexaViteiActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:fontFamily="serif"
        android:paddingTop="55dp"
        android:text="Opțiuni de prelucrare a anexei pentru viței:"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="60dp"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="118dp" />

    <Button
        android:id="@+id/btnAdauga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Adaugă vițel"
        android:background="@drawable/buton_rotund"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>

    <Button
        android:id="@+id/btnLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Afișează viței înregistrați"
        android:background="@drawable/buton_rotund"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>

    <Button
        android:id="@+id/btnExport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Exportă csv"
        android:background="@drawable/buton_rotund"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:onClick="exportData"/>

</LinearLayout>