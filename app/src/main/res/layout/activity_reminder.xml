<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reminder.Reminder"
    android:orientation="vertical"
    android:background="@color/colorFundal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/reminder_icon"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:fontFamily="serif"
        android:paddingTop="55dp"
        android:text="@string/reminder"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="118dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/colorHint"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/nrCrotala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Număr crotală"
            android:inputType="number"
            android:textSize="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/colorHint"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <EditText
            android:id="@+id/varsta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Vârstă taurină (luni)"
            android:inputType="number"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/colorHint"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <EditText
            android:id="@+id/dataMonta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Data montei (dd/MM/yyyy)"
            android:inputType="text"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/butonInregistrareData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Înregistrare dată"
        android:textAlignment="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/buton_rotund"/>

    <Button
        android:id="@+id/butonDDL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vezi termen limită pentru dosar"
        android:textAlignment="center"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"/>

</LinearLayout>